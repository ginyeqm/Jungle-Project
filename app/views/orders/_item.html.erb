<% if product = Product.find_by(id: product_id) %>
  <% item_total = total_price / 100 %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= @order.line_items.find_by(product_id: product_id).quantity %>
    </td>
    <td>
       <%= item_total %>
    </td>
  </tr>
<% end %>
